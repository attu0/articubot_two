<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- TO DO <xacro:include filename="$(find articubot_two)/description/material_color.xacro" /> -->
    <xacro:include filename="$(find articubot_two)/description/inertial_macros.xacro" /> 
    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.0" x="0.24" y="0.18" z="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/White</material>                          
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.09 0.02" rpy="${-pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <link name="left_wheel">
        <visual>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" radius="0.07" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>        
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>                  
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.09 0.02" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    <link name="right_wheel">
        <visual>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(find articubot_two)/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" radius="0.07" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>  
        <mu1>1.0</mu1>                        
        <mu2>1.0</mu2>
    </gazebo>

    <!-- FRONT CASTER WHEEL LINK -->

    <joint name="front_caster_wheel_one_joint" type="fixed">
        <parent link="chassis"/>
        <child link="front_caster_wheel_one"/>
        <origin xyz="0.12 0 0" rpy="0 0 0"/>
    </joint>
    <link name="front_caster_wheel_one">
        <visual>
            <geometry>
                <sphere radius="0.01495" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01495" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.01495">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="front_caster_wheel_one">
        <material>Gazebo/Black</material>     
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>                     
    </gazebo>

    <!-- Back caster wheel -->

    <joint name="back_caster_wheel_one_joint" type="fixed">
        <parent link="chassis"/>
        <child link="back_caster_wheel_one"/>
        <origin xyz="-0.12 0 0" rpy="0 0 0"/>
    </joint>
    <link name="back_caster_wheel_one">
        <visual>
            <geometry>
                <sphere radius="0.01495" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01495" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.01495">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="back_caster_wheel_one">
        <material>Gazebo/Black</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>                    
    </gazebo>

</robot>